<Window x:Class="DailyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyWpfApp"
        mc:Ignorable="d"
        Title="MainWindow"
    
    xmlns:helpers="clr-namespace:DailyWpfApp.Helpers"
    d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=False}"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    WindowStartupLocation="CenterScreen"
    MinWidth="480"
    MinHeight="250"
    >
    <Window.Resources>
        <helpers:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter" />
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>
    <Border x:Name="HighContrastBorder" BorderBrush="Transparent" BorderThickness="8 1 8 8">
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="44" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--窗口标题栏-->
            <Grid
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Height="44">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--返回按钮-->
                <Button
                    x:Name="BackButton"
                    Grid.Column="0"
                    Height="32"
                    Width="40"
                    Margin="4,0"
                    VerticalAlignment="Center"
                    AutomationProperties.Name="Back"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="BackButton_Click"
                    WindowChrome.IsHitTestVisibleInChrome="True"
                    ToolTipService.ToolTip="Back">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent" />
                        <SolidColorBrush x:Key="ButtonBorderBrushDisabled" Color="Transparent" />
                    </Button.Resources>
                    <TextBlock Text="&#xE72B;">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource HamburgerMenuIconTextBlockStyle}">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="{DynamicResource TextFillColorDisabledBrush}">
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>
                <!--窗口的图标和文字-->
                <StackPanel
                    Grid.Column="1"
                    Margin="4,0,0,0"
                    Orientation="Horizontal">
                    <Image
                        Width="20"
                        VerticalAlignment="Center"
                        Source="/Resources/Images/house128.png" />
                    <TextBlock
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        AutomationProperties.HeadingLevel="Level1"
                        Text="Daily WPF Helper" />
                </StackPanel>
            </Grid>
            <!--导航栏+主体内容-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--导航栏-->
                <Grid Grid.Column="0" Background="LightGray">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Width" Value="250" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding VM.NavigationPanelIsOpen}" Value="False">
                                    <Setter Property="Width" Value="48" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--导航栏折叠按钮-->
                    <Button x:Name="Button_Fold" Style="{StaticResource NavigationFoldButtonStyle}" 
                            Command="{Binding VM.HumbergerMenuClickedCommand}">
                        <TextBlock VerticalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="12" Text="&#xE700;">
                        </TextBlock>
                    </Button>
                    <!--导航菜单-->
                    <ListBox
                        x:Name="NavigationListBox"
                        Grid.Row="1"
                        Margin="0,16,0,16"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemContainerStyle="{StaticResource HamburgerMenuListBoxItemStyle}"
                        SelectionChanged="NavigationListBox_SelectionChanged">
                        <ListBox.Resources>
                            <!--当菜单收缩时隐藏文字-->
                            <Style TargetType="TextBlock" BasedOn="{StaticResource HamburgerMenuLabelTextBlockStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.VM.NavigationPanelIsOpen, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Resources>
                        <!--HomePage-->
                        <ListBoxItem Tag="DailyWpfApp.Views.HomePage" >
                            <StackPanel Orientation="Horizontal"  >
                                <TextBlock Style="{StaticResource HamburgerMenuIconTextBlockStyle}" Text="&#xE80F;" />
                                <TextBlock Text="Home"/>
                            </StackPanel>
                        </ListBoxItem>
                        <!--WebServerPage-->
                        <ListBoxItem Tag="DailyWpfApp.Views.WebServerPage" >
                            <StackPanel Orientation="Horizontal"  >
                                <TextBlock Style="{StaticResource HamburgerMenuIconTextBlockStyle}" Text="&#xEC27;" />
                                <TextBlock Text="Web Server"/>
                            </StackPanel>
                        </ListBoxItem>
                        <!--ItemsSource="{Binding VM.NavigationItems}"-->
                        <!--SelectedItem="{Binding VM.SelectedNavigationItem, Mode=TwoWay}">-->
                        <!--<ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="8" >
                                    <TextBlock
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="16"
                                        VerticalAlignment="Center"
                                        Text="{Binding Icon}" />
                                    <TextBlock
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding DisplayName}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.VM.NavigationPanelIsOpen, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>-->
                    </ListBox>
                    <!--设置按钮-->
                    <Button
                        x:Name="SettingsButton"
                        Grid.Row="2"
                        Click="SettingsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="SettingsIcon" Margin="0,4,0,0" FontFamily="{StaticResource SymbolThemeFontFamily}">&#xE713;</TextBlock>
                            <TextBlock Margin="8,0,0,0" Text="Settings" />
                        </StackPanel>
                    </Button>
                </Grid>
                <!--主体内容-->
                <Border
                    Grid.Column="1"
                    Margin="4,0,0,0"
                    Padding="24,16,24,0"
                    Background="{DynamicResource LayerFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8,0,0,0">
                    <Frame x:Name="RootContentFrame" Navigated="RootContentFrame_Navigated" 
                           NavigationUIVisibility="Hidden" />
                           <!--MouseDown="Window_MouseDown"--> 
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
